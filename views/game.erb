<html>
  <head>
    <link rel="icon" href="../images/icon.png" type="image/icon">
    <link rel="stylesheet" type="text/css" href="../css/shared.css">
    <link rel="stylesheet" type="text/css" href="../css/game.css">
    <title>Hangman</title>
  </head>
  <body>
    <div id="progress" class="<%= "hangman#{9 - session[:attempts_left]}" %>"></div>
    <% dashes = "" %>
    <% i = 1 %>
    <% l = session[:word].length - 1 %>
    <% until i > l do %>
      <% dashes += "_" %>
      <% i += 1%>
    <% end %>
    <div class="word"> <%= dashes %> </div>
    <div id="keyboard"></div>
  </body>
  <script src="../scripts/game.js"></script>
  <script> init("<%= session[:language] %>"); </script>
</html>
